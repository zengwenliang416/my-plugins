{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skills Index Schema",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "generated": { "type": "string", "format": "date-time" },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "description": { "type": "string" },
          "triggers": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tools": {
            "type": "array",
            "items": { "type": "string" }
          },
          "category": {
            "type": "string",
            "enum": ["workflow", "analysis", "generation", "utility"]
          }
        },
        "required": ["name", "path", "description"]
      }
    },
    "categories": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    }
  }
}
