{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Documentation Plan Schema",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "generated": { "type": "string", "format": "date-time" },
    "project_root": { "type": "string" },
    "scope": {
      "type": "string",
      "enum": ["full", "api", "components", "guides"]
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_files": { "type": "integer" },
        "documented": { "type": "integer" },
        "needs_doc": { "type": "integer" },
        "outdated": { "type": "integer" },
        "coverage": { "type": "string" }
      }
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["api", "component", "guide", "reference"]
          },
          "path": { "type": "string" },
          "title": { "type": "string" },
          "source_files": {
            "type": "array",
            "items": { "type": "string" }
          },
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "status": {
            "type": "string",
            "enum": ["missing", "outdated", "incomplete", "complete"]
          },
          "estimated_sections": {
            "type": "array",
            "items": { "type": "string" }
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "complexity": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          }
        },
        "required": ["id", "type", "path", "title"]
      }
    },
    "structure": {
      "type": "object",
      "additionalProperties": true
    },
    "generation_order": {
      "type": "array",
      "items": { "type": "string" }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "analysis_time_ms": { "type": "integer" },
        "files_scanned": { "type": "integer" },
        "existing_docs": { "type": "integer" }
      }
    }
  },
  "required": ["version", "generated", "documents"]
}
