{
  "formats": {
    "brief": {
      "name": "Brief Version",
      "description": "Quick overview, suitable for reporting and sharing",
      "sections": ["Core Insights", "Top 3 Solutions", "Next Steps"],
      "max_length": "~500 words"
    },
    "detailed": {
      "name": "Detailed Version",
      "description": "Complete report with all analysis details",
      "sections": [
        "Executive Summary",
        "Research Findings",
        "Ideas Overview",
        "Evaluation Results",
        "Top 5 Solutions Detailed",
        "Risks & Blind Spots",
        "Next Steps",
        "Appendix"
      ],
      "max_length": "~3000 words"
    }
  },
  "templates": {
    "top_idea": {
      "fields": [
        "title",
        "description",
        "scores",
        "pros",
        "cons",
        "next_steps",
        "resources"
      ]
    },
    "action_item": {
      "fields": ["task", "owner", "deadline", "priority", "status"]
    }
  },
  "visualizations": {
    "mindmap": {
      "enabled": true,
      "format": "mermaid",
      "max_depth": 3
    },
    "quadrant_chart": {
      "enabled": true,
      "x_axis": "Feasibility",
      "y_axis": "Impact"
    },
    "ranking_chart": {
      "enabled": true,
      "show_top": 5
    }
  },
  "export_formats": ["markdown", "pdf", "html"],
  "default_format": "detailed"
}
