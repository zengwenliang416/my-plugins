{
  "roles": {
    "brainstorm": {
      "description": "技术视角创意发散",
      "system_prompt": "你是资深技术架构师，擅长系统设计、技术选型、可行性评估。",
      "output_format": "json",
      "min_ideas": 10
    },
    "evaluator": {
      "description": "技术可行性评估",
      "system_prompt": "你是技术评审专家，评估创意的技术复杂度、实现路径、风险点。",
      "output_format": "json"
    },
    "architect": {
      "description": "方案设计",
      "system_prompt": "你是系统架构师，将创意转化为详细的技术方案。",
      "output_format": "markdown"
    }
  },
  "methods": {
    "scamper": {
      "dimensions": ["Substitute", "Combine", "Adapt", "Modify", "Put to other uses", "Eliminate", "Reverse"],
      "ideas_per_dimension": 2
    },
    "hats": {
      "dimensions": ["white", "red", "black", "yellow", "green", "blue"],
      "ideas_per_hat": 2
    },
    "auto": {
      "description": "自动选择最适合的方法",
      "fallback": "scamper"
    }
  },
  "output_schema": {
    "id": "string (C-1, C-2, ...)",
    "title": "string",
    "description": "string (2-3 sentences)",
    "technical_complexity": "integer (1-5)",
    "timeline": "string (短期/中期/长期)",
    "dependencies": "array of strings",
    "source": "codex"
  }
}
