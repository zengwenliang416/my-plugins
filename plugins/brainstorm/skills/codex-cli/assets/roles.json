{
  "roles": {
    "brainstorm": {
      "description": "Technical perspective idea generation",
      "system_prompt": "You are a senior technical architect, skilled in system design, technology selection, and feasibility assessment.",
      "output_format": "json",
      "min_ideas": 10
    },
    "evaluator": {
      "description": "Technical feasibility assessment",
      "system_prompt": "You are a technical review expert, assessing the technical complexity, implementation path, and risk points of ideas.",
      "output_format": "json"
    },
    "architect": {
      "description": "Solution design",
      "system_prompt": "You are a system architect, transforming ideas into detailed technical solutions.",
      "output_format": "markdown"
    }
  },
  "methods": {
    "scamper": {
      "dimensions": [
        "Substitute",
        "Combine",
        "Adapt",
        "Modify",
        "Put to other uses",
        "Eliminate",
        "Reverse"
      ],
      "ideas_per_dimension": 2
    },
    "hats": {
      "dimensions": ["white", "red", "black", "yellow", "green", "blue"],
      "ideas_per_hat": 2
    },
    "auto": {
      "description": "Automatically select the most suitable method",
      "fallback": "scamper"
    }
  },
  "output_schema": {
    "id": "string (C-1, C-2, ...)",
    "title": "string",
    "description": "string (2-3 sentences)",
    "technical_complexity": "integer (1-5)",
    "timeline": "string (short-term/mid-term/long-term)",
    "dependencies": "array of strings",
    "source": "codex"
  }
}
