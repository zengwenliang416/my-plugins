{
  "dependency_tracking": {
    "max_depth": 3,
    "include_tests": false,
    "skip_patterns": [
      "node_modules/**",
      "*.d.ts",
      "*.config.*",
      "**/__tests__/**"
    ]
  },
  "documentation": {
    "output_dir": "docs/related",
    "include_index": true,
    "link_style": "relative"
  },
  "analysis": {
    "trace_direction": "both",
    "include_indirect": true,
    "external_deps": "summary"
  },
  "generation": {
    "parallel": true,
    "preserve_order": true,
    "include_dependency_graph": true
  }
}
