{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Context Configuration",
  "type": "object",
  "properties": {
    "project": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "root": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["monorepo", "single", "library", "application"]
        }
      },
      "required": ["name", "root"]
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["rules", "code_map", "skills", "docs", "custom"]
          },
          "path": { "type": "string" },
          "priority": { "type": "integer", "minimum": 1, "maximum": 10 }
        },
        "required": ["type", "path"]
      }
    },
    "limits": {
      "type": "object",
      "properties": {
        "max_tokens": { "type": "integer", "default": 50000 },
        "max_files": { "type": "integer", "default": 20 },
        "max_depth": { "type": "integer", "default": 3 }
      }
    }
  }
}
