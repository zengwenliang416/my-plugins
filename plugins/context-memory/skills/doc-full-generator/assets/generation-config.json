{
  "templates": {
    "api": {
      "sections": [
        "Overview",
        "Authentication",
        "Endpoints",
        "Examples",
        "Errors"
      ],
      "required_fields": ["method", "path", "parameters", "response"]
    },
    "component": {
      "sections": [
        "Overview",
        "Installation",
        "Props",
        "Usage",
        "Variants",
        "Accessibility"
      ],
      "required_fields": ["name", "props", "examples"]
    },
    "guide": {
      "sections": [
        "Introduction",
        "Prerequisites",
        "Step-by-Step",
        "Troubleshooting",
        "FAQ"
      ],
      "required_fields": ["title", "steps"]
    },
    "reference": {
      "sections": ["Overview", "API", "Examples", "Related"],
      "required_fields": ["title", "content"]
    }
  },
  "generation": {
    "parallel": true,
    "max_concurrent": 3,
    "retry_on_failure": 2,
    "timeout_ms": 60000
  },
  "output": {
    "format": "markdown",
    "include_toc": true,
    "include_metadata": true,
    "code_highlighting": true
  },
  "quality_checks": {
    "validate_markdown": true,
    "check_links": true,
    "verify_headers": true,
    "min_sections": 3
  }
}
