{
  "react": {
    "functional": {
      "name": "函数组件",
      "template": "export default function {Name}({ ...props }: {Name}Props) {\n  return (\n    <div className=\"{name}\">\n      {/* content */}\n    </div>\n  );\n}"
    },
    "with_state": {
      "name": "带状态组件",
      "imports": ["useState"],
      "template": "const [state, setState] = useState(initialValue);"
    },
    "with_effect": {
      "name": "带副作用组件",
      "imports": ["useEffect"],
      "template": "useEffect(() => {\n  // effect\n  return () => {\n    // cleanup\n  };\n}, [deps]);"
    }
  },
  "vue": {
    "composition": {
      "name": "组合式 API",
      "template": "<script setup lang=\"ts\">\nimport { ref } from 'vue';\n\nconst props = defineProps<{Name}Props>();\nconst emit = defineEmits<{Name}Emits>();\n</script>\n\n<template>\n  <div class=\"{name}\">\n    <!-- content -->\n  </div>\n</template>"
    },
    "options": {
      "name": "选项式 API",
      "template": "export default {\n  name: '{Name}',\n  props: {},\n  data() {\n    return {};\n  }\n};"
    }
  },
  "styling": {
    "tailwind": {
      "base": "flex items-center justify-center",
      "button": "px-4 py-2 rounded-md font-medium transition-colors",
      "card": "p-4 rounded-lg shadow-md bg-white",
      "input": "px-3 py-2 border rounded-md focus:outline-none focus:ring-2"
    },
    "css_modules": {
      "extension": ".module.css",
      "import": "import styles from './{name}.module.css';"
    },
    "styled_components": {
      "import": "import styled from 'styled-components';",
      "template": "const Styled{Name} = styled.div`\n  /* styles */\n`;"
    }
  },
  "best_practices": [
    "Props 使用 TypeScript 接口定义",
    "提供合理的默认值",
    "支持 className 透传",
    "添加 data-testid 属性",
    "包含基本的 ARIA 属性"
  ]
}
