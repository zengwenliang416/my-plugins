{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Retrieval Strategies Configuration",
  "description": "检索策略配置",
  "type": "object",
  "properties": {
    "tools": {
      "type": "object",
      "description": "检索工具配置",
      "properties": {
        "auggie_mcp": {
          "type": "object",
          "properties": {
            "priority": { "type": "integer", "default": 1 },
            "enabled": { "type": "boolean", "default": true },
            "timeout_ms": { "type": "integer", "default": 30000 },
            "use_cases": {
              "type": "array",
              "items": { "type": "string" },
              "default": [
                "semantic_search",
                "feature_discovery",
                "codebase_understanding"
              ]
            }
          }
        },
        "lsp": {
          "type": "object",
          "properties": {
            "priority": { "type": "integer", "default": 2 },
            "enabled": { "type": "boolean", "default": true },
            "operations": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "goToDefinition",
                  "findReferences",
                  "documentSymbol",
                  "workspaceSymbol",
                  "hover",
                  "incomingCalls",
                  "outgoingCalls",
                  "goToImplementation"
                ]
              }
            }
          }
        },
        "glob": {
          "type": "object",
          "properties": {
            "priority": { "type": "integer", "default": 3 },
            "enabled": { "type": "boolean", "default": true },
            "default_patterns": {
              "type": "object",
              "properties": {
                "typescript": { "type": "string", "default": "**/*.{ts,tsx}" },
                "javascript": { "type": "string", "default": "**/*.{js,jsx}" },
                "python": { "type": "string", "default": "**/*.py" },
                "go": { "type": "string", "default": "**/*.go" },
                "rust": { "type": "string", "default": "**/*.rs" }
              }
            }
          }
        },
        "grep": {
          "type": "object",
          "properties": {
            "priority": { "type": "integer", "default": 4 },
            "enabled": { "type": "boolean", "default": true },
            "case_sensitive": { "type": "boolean", "default": false },
            "max_results": { "type": "integer", "default": 100 }
          }
        },
        "external_search": {
          "type": "object",
          "properties": {
            "priority": { "type": "integer", "default": 5 },
            "enabled": { "type": "boolean", "default": true },
            "use_cases": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["external_docs", "new_project", "framework_reference"]
            },
            "default_limit": { "type": "integer", "default": 5 }
          }
        }
      }
    },
    "strategies": {
      "type": "object",
      "description": "按需求类型的检索策略",
      "properties": {
        "feature_implementation": {
          "type": "object",
          "properties": {
            "primary_tool": { "type": "string", "default": "auggie_mcp" },
            "fallback_tools": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["lsp", "glob"]
            },
            "expansion_depth": { "type": "integer", "default": 3 },
            "include_tests": { "type": "boolean", "default": true }
          }
        },
        "bug_fix": {
          "type": "object",
          "properties": {
            "primary_tool": { "type": "string", "default": "grep" },
            "fallback_tools": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["lsp", "auggie_mcp"]
            },
            "expansion_depth": { "type": "integer", "default": 2 },
            "include_tests": { "type": "boolean", "default": true }
          }
        },
        "refactoring": {
          "type": "object",
          "properties": {
            "primary_tool": { "type": "string", "default": "lsp" },
            "fallback_tools": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["auggie_mcp", "grep"]
            },
            "expansion_depth": { "type": "integer", "default": 4 },
            "include_tests": { "type": "boolean", "default": true },
            "mandatory_operations": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["findReferences", "incomingCalls"]
            }
          }
        },
        "new_project": {
          "type": "object",
          "properties": {
            "primary_tool": { "type": "string", "default": "external_search" },
            "fallback_tools": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["auggie_mcp"]
            },
            "external_search": { "type": "boolean", "default": true }
          }
        }
      }
    },
    "filters": {
      "type": "object",
      "description": "文件过滤配置",
      "properties": {
        "include": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["src/**/*", "lib/**/*", "app/**/*"]
        },
        "exclude": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/.git/**",
            "**/*.min.js",
            "**/*.map"
          ]
        }
      }
    },
    "relevance_scoring": {
      "type": "object",
      "description": "相关性评分权重",
      "properties": {
        "keyword_match": { "type": "number", "default": 0.3 },
        "path_relevance": { "type": "number", "default": 0.25 },
        "reference_count": { "type": "number", "default": 0.2 },
        "recency": { "type": "number", "default": 0.15 },
        "file_size": { "type": "number", "default": 0.1 }
      }
    },
    "expansion": {
      "type": "object",
      "description": "上下文扩展配置",
      "properties": {
        "max_depth_upward": { "type": "integer", "default": 3 },
        "max_depth_downward": { "type": "integer", "default": 2 },
        "max_siblings": { "type": "integer", "default": 5 },
        "max_total_files": { "type": "integer", "default": 20 }
      }
    }
  }
}
