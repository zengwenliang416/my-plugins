{
  "type_inference_rules": [
    {
      "condition": "新增文件且为功能代码",
      "type": "feat",
      "confidence": "high"
    },
    {
      "condition": "修改现有代码且修复问题",
      "type": "fix",
      "confidence": "medium"
    },
    {
      "condition": "仅修改文档文件",
      "type": "docs",
      "confidence": "high"
    },
    {
      "condition": "仅修改测试文件",
      "type": "test",
      "confidence": "high"
    },
    {
      "condition": "修改配置文件",
      "type": "chore",
      "confidence": "medium"
    },
    {
      "condition": "重命名或移动文件",
      "type": "refactor",
      "confidence": "medium"
    },
    {
      "condition": "删除无用代码",
      "type": "refactor",
      "confidence": "medium"
    }
  ],
  "split_rules": [
    {
      "name": "multi_scope",
      "condition": "涉及 2+ 个不同作用域",
      "action": "建议拆分"
    },
    {
      "name": "large_change",
      "condition": "文件数 > 10 或变更行数 > 300",
      "action": "建议拆分"
    },
    {
      "name": "mixed_types",
      "condition": "同时有 feat + fix",
      "action": "可选拆分"
    },
    {
      "name": "add_delete_mix",
      "condition": "同时有新增和删除文件",
      "action": "建议拆分"
    }
  ],
  "complexity_thresholds": {
    "low": { "max_files": 3, "max_lines": 50 },
    "medium": { "max_files": 10, "max_lines": 300 },
    "high": { "min_files": 11, "min_lines": 301 }
  }
}
