{
  "strategies": {
    "semantic": {
      "tool": "mcp__auggie-mcp__codebase-retrieval",
      "description": "语义理解代码功能和关系",
      "use_when": ["理解功能实现", "查找相关代码", "探索依赖关系"],
      "query_template": "Find code related to: {topic}. Include: 1) Main implementation 2) Dependencies 3) Usage examples"
    },
    "structural": {
      "tool": "LSP",
      "description": "精确符号级分析",
      "use_when": ["查找定义", "追踪引用", "理解类型"],
      "operations": ["documentSymbol", "goToDefinition", "findReferences", "hover"]
    },
    "pattern": {
      "tool": "Grep",
      "description": "模式匹配搜索",
      "use_when": ["查找特定字符串", "搜索 TODO/FIXME", "查找配置值"]
    },
    "file": {
      "tool": "Glob",
      "description": "文件路径匹配",
      "use_when": ["查找特定类型文件", "探索目录结构"]
    }
  },
  "priority_order": ["semantic", "structural", "pattern", "file"],
  "fallback_rules": [
    { "if": "auggie-mcp unavailable", "then": "use Grep + Glob" },
    { "if": "LSP unavailable", "then": "use Grep for symbol search" }
  ]
}
