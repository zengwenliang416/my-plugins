{
  "search_modes": {
    "trends": {
      "query_template": "{topic} trends 2026",
      "recommended_domains": ["techcrunch.com", "wired.com", "theverge.com", "arstechnica.com"],
      "category": "news",
      "default_limit": 5
    },
    "cases": {
      "query_template": "{topic} case study success story",
      "recommended_domains": ["hbr.org", "medium.com", "forbes.com", "inc.com"],
      "category": "company",
      "default_limit": 5
    },
    "cross_industry": {
      "query_template": "{topic} inspiration from {other_industry}",
      "recommended_domains": [],
      "category": null,
      "default_limit": 5
    },
    "pain_points": {
      "query_template": "{topic} challenges problems pain points",
      "recommended_domains": ["reddit.com", "quora.com", "producthunt.com"],
      "category": "tweet",
      "default_limit": 5
    },
    "opportunities": {
      "query_template": "{topic} opportunities innovations startups",
      "recommended_domains": ["crunchbase.com", "pitchbook.com"],
      "category": "company",
      "default_limit": 5
    }
  },
  "cross_industry_mapping": {
    "电商": ["游戏", "金融"],
    "SaaS": ["消费品", "媒体"],
    "教育": ["游戏", "娱乐"],
    "医疗": ["航空", "核能"]
  },
  "priority": {
    "recency": {
      "6_months": 5,
      "12_months": 4,
      "24_months": 3,
      "older": 2
    },
    "source_authority": {
      "industry_report": 5,
      "major_media": 4,
      "academic_paper": 4,
      "company_blog": 3,
      "social_media": 2
    }
  }
}
