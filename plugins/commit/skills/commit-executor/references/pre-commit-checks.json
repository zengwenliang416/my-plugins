{
  "checks": [
    {
      "name": "staged_files",
      "description": "Ensure there are staged files",
      "command": "git diff --cached --name-only | wc -l",
      "expect": "> 0",
      "error": "No staged files; please run git add first"
    },
    {
      "name": "no_conflict_markers",
      "description": "Check for conflict markers",
      "command": "git diff --cached | grep -c '^[<>=]\\{7\\}'",
      "expect": "= 0",
      "error": "Conflict markers found; resolve and retry"
    },
    {
      "name": "no_debug_code",
      "description": "Check for debug code",
      "patterns": [
        "console.log",
        "debugger",
        "print(",
        "TODO:",
        "FIXME:"
      ],
      "severity": "warning"
    }
  ],
  "hooks": {
    "pre-commit": {
      "description": "Pre-commit checks",
      "skip_flag": "--no-verify"
    },
    "commit-msg": {
      "description": "Commit message format checks",
      "skip_flag": "--no-verify"
    }
  },
  "safe_defaults": {
    "allow_empty": false,
    "allow_amend": false,
    "sign_off": false
  }
}
