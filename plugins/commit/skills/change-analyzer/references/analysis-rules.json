{
  "type_inference_rules": [
    {
      "condition": "New files that are feature code",
      "type": "feat",
      "confidence": "high"
    },
    {
      "condition": "Modify existing code to fix an issue",
      "type": "fix",
      "confidence": "medium"
    },
    {
      "condition": "Only documentation files changed",
      "type": "docs",
      "confidence": "high"
    },
    {
      "condition": "Only test files changed",
      "type": "test",
      "confidence": "high"
    },
    {
      "condition": "Configuration files changed",
      "type": "chore",
      "confidence": "medium"
    },
    {
      "condition": "Rename or move files",
      "type": "refactor",
      "confidence": "medium"
    },
    {
      "condition": "Delete unused code",
      "type": "refactor",
      "confidence": "medium"
    }
  ],
  "split_rules": [
    {
      "name": "multi_scope",
      "condition": "Involves 2+ distinct scopes",
      "action": "Recommend split"
    },
    {
      "name": "large_change",
      "condition": "Files > 10 or lines changed > 300",
      "action": "Recommend split"
    },
    {
      "name": "mixed_types",
      "condition": "feat and fix together",
      "action": "Optional split"
    },
    {
      "name": "add_delete_mix",
      "condition": "New and deleted files together",
      "action": "Recommend split"
    }
  ],
  "complexity_thresholds": {
    "low": { "max_files": 3, "max_lines": 50 },
    "medium": { "max_files": 10, "max_lines": 300 },
    "high": { "min_files": 11, "min_lines": 301 }
  },
  "split_commit_fields": {
    "type": { "required": true, "description": "Conventional Commit type" },
    "scope": { "required": true, "description": "Change scope" },
    "emoji": { "required": true, "description": "Type-specific emoji" },
    "files": { "required": true, "description": "Files in this commit" },
    "description": {
      "required": true,
      "description": "Short description (Chinese)"
    },
    "message": {
      "required": true,
      "description": "Complete title: type(scope): emoji description"
    },
    "body": {
      "required": true,
      "description": "Detailed description + file list"
    },
    "priority": { "required": true, "description": "Commit order (1 = first)" }
  }
}
